FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

asymmSolver PBiCG;

solvers
{
    "Y.*"
    {
        solver                  $asymmSolver;
        tolerance               1e-8;
        relTol                  0.0;
        preconditioner          DILU;
        smoother                DILUGaussSeidel;
        
        nLimiterIter		3;
    }

    "(rho|rhoFinal)"
    {
        solver          diagonal;
    }

    "(U|k|omega)"
    {
        solver                  $asymmSolver;
        tolerance               1e-8;
        relTol                  0.0;
        preconditioner          DILU;
        smoother                DILUGaussSeidel;
    }

    "(U|k|omega)Final"
    {
        $U;
        relTol          0;
    }

    "(h|hFinal)"
    {
        solver              $asymmSolver;
        preconditioner  DILU;
        tolerance        1e-8;
        relTol           0;
        smoother                DILUGaussSeidel;
    };

    p
    {
        solver               $asymmSolver;
        preconditioner  DILU;
        tolerance        1e-8;
        relTol           0;
        smoother                DILUGaussSeidel;
    }

    pFinal
    {
	$p;
    }
    
    "(Vb|Rb).*"
    {
	solver    diagonal;
    }

    cellMotionUx
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance        1e-8;
        relTol           0;
    }
}

PIMPLE
{
    momentumPredictor       true;
    turbOnFinalIterOnly     true;

    transonic               on;

    nOuterCorrectors        1;
    nCorrectors             2;
    checkMeshCourantNo      true;

    nNonOrthogonalCorrectors 1;
    
    nonOrthogonalityThreshold 45.0;
    skewnessThreshold 2.0;

    Cid 0.0;
    
    kappaFunction
    {
        type    acceleratedSonicCourantInverse;
        
        acceleratedSonicCourantInverseCoeffs
        {
            power   4.0;
            writeMaxMin true;
            resetCoupledBoundaries false;
            reinterpolateToFaces false;
        }
    }
}


