FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 273.15;

boundaryField
{
    "(frontAndBack|topAndBottom)"
    {
        type            empty;
    }

    sphere
    {
        type            fixedValue;
        value           uniform 273.15;
    }

    free
    {
        type            zeroGradient;
    }
}

