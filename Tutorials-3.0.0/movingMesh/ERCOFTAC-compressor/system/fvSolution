FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

asymmSolver BiCGStab;

solvers
{
    "Y.*"
    {
        solver                  $asymmSolver;
        tolerance               1e-8;
        relTol                  0.0;
        preconditioner          DILU;
        smoother                DILUGaussSeidel;
        
        nLimiterIter		3;
    }

    "(rho|rhoFinal)"
    {
        solver          diagonal;
    }

    "(U|k|omega)"
    {
        solver                  $asymmSolver;
        tolerance               1e-8;
        relTol                  0.0;
        preconditioner          DILU;
        smoother                DILUGaussSeidel;
    }

    "(U|k|omega)Final"
    {
        $U;
        relTol          0;
    }

    "(h|hFinal)"
    {
        solver              $asymmSolver;
        preconditioner  DILU;
        tolerance        1e-8;
        relTol           0;
        smoother                DILUGaussSeidel;
    };

    p
    {
        solver               $asymmSolver;
        preconditioner  DILU;
        tolerance        1e-8;
        relTol           0;
        smoother                DILUGaussSeidel;
    }

    pFinal
    {
	$p;
    }

    cellMotionUx
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance        1e-8;
        relTol           0;
    }
}

PIMPLE
{
    momentumPredictor       false;
    turbOnFinalIterOnly     true;

    nOuterCorrectors        1;
    nCorrectors             3;
    checkMeshCourantNo      true;

    nNonOrthogonalCorrectors 1;
    
    nonOrthogonalityThreshold 30.0;
    skewnessThreshold 2.0;
    
    pMin pMin [1 -1 -2 0 0 0 0] 100.0;
    Cid 1.0;
}


